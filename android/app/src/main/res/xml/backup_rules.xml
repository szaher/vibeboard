<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include all app data by default -->
    <include domain="root" />
    <include domain="file" path="." />

    <!-- Exclude sensitive files -->
    <exclude domain="sharedpref" path="device_prefs.xml" />
    <exclude domain="sharedpref" path="com.google.android.gms.measurement.prefs.xml" />

    <!-- Exclude cache and temporary directories -->
    <exclude domain="file" path="cache/" />
    <exclude domain="file" path="code_cache/" />

    <!-- Exclude databases that contain sensitive user data -->
    <exclude domain="database" path="analytics.db" />
</full-backup-content>