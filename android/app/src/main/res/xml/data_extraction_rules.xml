<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Use the built-in auto backup feature -->
        <include domain="root" />
        <include domain="file" path="." />

        <!-- Exclude sensitive data -->
        <exclude domain="root" path="device_prefs" />
        <exclude domain="sharedpref" path="sensitive_prefs.xml" />
        <exclude domain="database" path="sensitive.db" />
    </cloud-backup>

    <device-transfer>
        <!-- Rules for device-to-device transfer -->
        <include domain="root" />
        <include domain="file" path="." />

        <!-- Exclude temporary files -->
        <exclude domain="file" path="tmp/" />
        <exclude domain="cache" />
    </device-transfer>
</data-extraction-rules>